super + alt + Escape
	bspc quit

super + c
	bspc window -c

super + m
	bspc desktop -l next

super + b
	bspc desktop -B

# focus the next/previous node in the same window
super + {comma,period}
    bspc node -f {next,prev}.local

# set the window state
super + {t,shift + t,s,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + {grave,Tab}
        {WINDOW=left;DESKTOP=prev;,WINDOW=right;DESKTOP=next;} \
        if ! bspc window -f $WINDOW; then \
                bspc desktop -f $DESKTOP; \
        fi

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
 	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
  desk=`bspc query -D -d focused`; \
  bspc desktop -m {prev,next}; \
  bspc monitor -f {prev,next}; \
  bspc desktop -f $desk

super + shift + bracket{left,right}
	bspc window -d {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

shift + alt + 4
  maim -s | xclip -selection clipboard -t image/png

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

# send node to desktop on current monitor index
super + {_,shift} + {1-9}
    bspc {desktop -f,node -d} focused:^{1-9}

super + {_,shift + }y
  bspc {desktop,node focused} -m next && bspc {desktop,node} -f last

# ~button1
# 	bspc pointer -g focus

# ~button2
#     echo -n | xsel -n -i

# super + button{1-3}
# 	bspc pointer -g {move,resize_side,resize_corner}

# super + !button{1-3}
# 	bspc pointer -t %i %i

# super + @button{1-3}
	bspc pointer -u

super + {_,ctrl} + d
    bspwm_{_,re}name_desktop

super + alt + d
    bspc desktop focused -r

#
# wm independent hotkeys
#

super + Return
	alacritty

alt + space
  rofi -show window

super + space
	rofi -show run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

